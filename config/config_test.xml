<world>
    <window width="800" height="600" />
    <camera>
        <position x="0" y="1" z="20" />
        <lookAt x="0" y="0" z="0" />
        <up x="0" y="1" z="0" />
        <projection fov="60" near="1" far="1000" />
    </camera>

    <group>
        <transform>
            <translate time="10" align="True">
                <point x="0" y="0" z="1" />
                <point x="1" y="0" z="0" />
                <point x="0" y="0" z="-1" />
                <point x="-1" y="0" z="0" />
            </translate>
            <rotate angle="0" x="0" y="0" z="1" />
            <scale x="0.5" y="0.5" z="0.5" />
        </transform>
        <models>
            <model file="patch.3d">
                <texture file="./textures/teapot.jpg"/>

                <color>
                    <diffuse R="255" G="200" B="140" />
                    <ambient R="15" G="13" B="10" />
                    <specular R="255" G="255" B="255" />
                    <emissive R="0" G="0" B="0" />
                    <shininess value="128" />
                </color>
            </model>
        </models>
    </group>

    <lights>
        <light type="directional" dirX="0" dirY="1" dirZ="0"/>
        <!--
        <light type="point" posX="0" posY="0" posZ="0" />
        <light type="spotlight" posX="0" posY="10" posZ="0" dirX="1" dirY="1" dirZ="1" cutoff="45" />
                                -->
    </lights>
</world>